<!--genetest/pages/list/list.wxml-->
<view id="list">
    <view class="item" wx:for="{{list}}" wx:key="index">
        <view class="item_title">
            <view>基因检测条码：{{item.wbarcode}}</view>
            <view>{{item.result_issued}}</view>
        </view>
        <view class="item_main">
            <view>申请检测时间：{{item.create_time}}</view>
            <view wx:if="{{item.result_time}}">完成检测时间：{{item.result_time}}</view>
        </view>
        <block wx:if="{{item.result_issued == '等待样本'}}">
            <view class="button_group list_button_group">
                <view class="btn black" bindtap="showQrcode" data-id="{{item.id}}">邮寄样本</view>
            </view>
        </block>
        <block wx:if="{{item.result_issued == '报告已生成'}}">
            <view class="button_group list_button_group">
                <view class="btn black" bindtap="sendmessages" data-id="{{item.id}}">立即咨询</view>
                <view class="btn white" bindtap="checkreport" data-id="{{item.id}}">查看报告</view>
            </view>
        </block>
    </view>
    <view class="ic_empty" wx:if="{{list.length == 0}}">
        <image src="/images/ic_empty_box.png" mode="widthFix"></image>
        <view>暂无报告</view>
    </view>
