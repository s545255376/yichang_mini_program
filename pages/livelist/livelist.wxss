#top {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    display: flex;
    background: #ffffff;
    text-align: center;
    z-index: 998;
}

#top view {
    width: 100%;
    position: relative;
    font-size: 28rpx;
    color: #212121;
}

#top .click::after {
    position: absolute;
    bottom: 0;
    left: 40%;
    right: 40%;
    height: 5rpx;
    content: '';
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    background-color: #ee0a24;
}

#contant {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 20rpx;
    box-sizing: border-box;
    width: 100%;
    margin-top: 3rem;
}

#contant .liveList {
    flex-shrink: 0;
    width: calc(50% - 10rpx);
    margin-right: 10rpx;
    margin-bottom: 20rpx;
    border-radius: 12rpx;
    position: relative;
}

#contant .liveList.sec {
    margin-right: 0 !important;
    margin-left: 10rpx !important;
}

#contant .liveList .cover {
    position: relative;
}

#contant .liveList .cover image {
    width: 100%;
    display: block;
    border-radius: 12rpx 12rpx 0 0;
}

#contant .liveList .cover .live_status {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 21rpx;
    padding: 5rpx 17rpx;
    background: rgba(0, 0, 0, 0.3);
    color: #fff;
    font-size: 24rpx;
    line-height: 33rpx;
    position: absolute;
    right: 14rpx;
    top: 14rpx;
}

#contant .liveList .cover .live_status>text:first-child {
    display: inline-block;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    margin-right: 12rpx;
    background: #fff;
}

#contant .liveList .cover .live_status.liveing {
    background: #E21F45 !important;
}

#contant .liveList .info {
    padding: 35rpx 20rpx 25rpx;
    box-sizing: border-box;
    background: #fff;
    border-radius: 0 0 12rpx 12rpx;
}

#contant .liveList .info view {
    color: #A7A5A6;
    font-size: 24rpx;
    line-height: 24rpx;
    margin-bottom: 15rpx;
}

#contant .liveList .info .title {
    font-size: 28rpx;
    line-height: 28rpx;
    margin-bottom: 43rpx;
    color: #212121;
    font-weight: bold;
}

#contant .liveList .info view:last-child {
    margin-bottom: 0;
}

#contant .liveList .fix {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    border-radius: 12rpx;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
}

#contant .liveList .fix .infobox {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

#contant .liveList .fix .infobox image {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 20rpx;
}

#contant .liveList .fix .infobox .infos {
    color: #fff;
    font-size: 26rpx;
}

#contant .liveList .fix .infobox button {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    opacity: 0;
    z-index: 2;
}

#contant .liveList .fix .close {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 32rpx;
    height: 32rpx;
    z-index: 3;
}

#no_Access {
    font-size: 45rpx;
    font-weight: bold;
    color: #c4c8cc;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

#no_Access>view:last-child {
    margin-bottom: 400rpx;
}

