/* pages/databoard/databoard.wxss */
.data_title {
  margin: 20rpx 0;
  font-size: larger;
}
.data_box{
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  background: #ffffff;
  margin-bottom: 16rpx;
}
.data_box_title{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1px solid #EAEBEE;
  padding: 30rpx 0;
  height: 30rpx;
  line-height: 30rpx;
}
.data_box_title text{
  color: #231F20;
  font-size: 30rpx;
}
.data_box_title view{
  color: #A7A5A6;
  font-size: 26rpx;
}
.data_box_body{
  width: 100%;
  display: flex; 
  flex-wrap: wrap; 
  padding: 20rpx 60rpx;
}
.data_box_body view{
  width: 50%;
  text-align: center;
  position: relative;
  padding: 10rpx 0;
}
.data_box_body view view{
  font-size: 26rpx;
  padding: 8rpx 0;
}
.data_content {
  color: #7B7979;
}
.data_num {
  color: rgb(223, 108, 108);
}
.data_box_body text{
  position: absolute;
  right: 50%;
  top: -5rpx;
  margin-right: -40rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  color: #ffffff;
  background: #C2253A;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
}