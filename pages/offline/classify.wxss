/* pages/classify/classify.wxss */
/* 基础组件样式覆盖 */
#search .van-search {
  border-bottom: 1px solid #ededed;
}
.van-sidebar {
  width: 100% !important;
}
.van-sidebar-item--selected,
.van-sidebar-item--selected.van-sidebar-item--hover {
  background-color: unset !important;
}
.van-sidebar-item--selected {
  border-color: #c2253a !important;
  color: #c2253a !important;
}
.van-sidebar-item--select::before {
  content: ' ';
}
.van-sidebar-item {
  margin: 20rpx 0 48rpx 0 !important;
  padding: 0 40rpx !important;
  background-color: #fff !important;
  font-size: 24rpx !important;
}
.van-sidebar-item--hover:not(.van-sidebar-item--disabled) {
  background-color: unset !important;
}
/* 页面 */
#classify {
  display: flex;
  flex: 0;
  background-color: #fff;
}
#left_bar {
  width: 25%;
  overflow-y: scroll;
  box-shadow: 1px 0px 0px 0px #ededed;
}
#right_contant {
  width: 75%;
  overflow-y: scroll;
  padding: 40rpx 0 40rpx;
  box-sizing: border-box;
}
#classify_image {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 24rpx;
}
#classify_contant {
  width: 100%;
  padding-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}
.sort_contents {
  display: flex;
  flex-direction: row;
  justify-content: left;
}
.sort_contents view {
  width: 150rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  margin-left: 30rpx;
  border-radius: 12rpx;
}
.sort_click {
  background: #B63F48;
  color: #ffffff;
}
.sort_unclick {
  background: #E7E7E7;
}
.goodspart {
  width: 100%;
  display: flex;
  justify-content: left;
}
.goodspart .image {
  width: 70%;
}
.goodspart .image image {
  width: 100%;
  box-sizing: border-box;
  border-radius: 5%;
}
.goodspart .info {
  margin-left: 5%;
}
.goodspart .title_content {
  display: flex;
  flex-direction: left;
}
.title_content .sign {
  padding-right: 5%;
  height: 50rpx;
  width: 30%;
  background: rgba(182, 63, 72, 0.2);
  border-radius: 10%;
  font-size: 28rpx;
  color: #B63F48;
  text-align: center;
  line-height: 50rpx;
}
.title_content .title {
  height: 50rpx;
  line-height: 50rpx;
  overflow: unset !important;
  white-space: unset !important;
}
.mid_content {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.3);
}
.buttom_content {
  display: flex;
  justify-content: space-between;
}
.buttom_content .price {
  font-size: 35rpx;
}
.buttom_content image {
  margin-top: 30rpx;
  height: 40rpx;
  width: 40rpx;
}
.paynum{
  margin-top: 30rpx;
  float: right;
  display: inline-flex;
}
.paynum view{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #F2F3F5;
  color: #231F20;
  text-align: center;
}
.paynum .num{
  margin: 0 2rpx;
} 
.paynum .un_click{
  background: #F7F8FA;
  color: #A7A5A6;
}
.cart_btn {
  position: fixed;
  left: 15rpx;
  width: 140rpx;
  height: 140rpx;
  bottom: 2rpx;
  /* background-color: #c2253a; */
  /* font-size: larger; */
  /* color: #FFFFFF; */
  text-align: center;
  /* line-height: 140rpx; */
  font-size: 30rpx;
}

.cart_btn image {
    width: 50rpx;
}

.cart_btn text{
  position: absolute;
  top: 0;
  right: 50%;
  margin-right: -35rpx;
  background: #231F20;
  color: #ffffff;
  width: 30rpx;
  height: 30rpx;
  font-size: 20rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
}