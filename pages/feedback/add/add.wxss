.placeholder{
  color: #A7A5A6;
}
.text{
  position: relative;
  border-bottom: 1px solid #F9F9F9;
}
.text textarea{
  width: calc(100% - 60rpx);
  background: #ffffff;
  padding: 40rpx 30rpx;
  height: 300rpx;
  font-size: 26rpx;
}
.text text{
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #D3D2D2;
  z-index: 999;
}

.imglist{
  width: calc(100% - 60rpx);
  padding: 30rpx 30rpx 10rpx 30rpx;
  background: #ffffff;
  margin-bottom: 100rpx;
}
.imglist .img{
  width: 140rpx;
  height: 140rpx;
  position: relative;
  display: inline-flex;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.imglist .img image{
  width: 100%;
  height: 100%;
}
.imglist .img view{
  position: absolute;
  left: 0;
  bottom: 0;
  background: #000000;
  color: #ffffff;
  font-size: 22rpx;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  opacity: 0.6;
}
.page_bottom_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #231F20;
  color: #ffffff;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
}