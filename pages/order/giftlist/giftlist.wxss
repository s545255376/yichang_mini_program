.goods_part{
  background: #ffffff;
}
.goods{
  width: calc(100% - 60rpx);
  display: flex;
  padding: 30rpx;
  position: relative;
}
.goods .goods_thumb{
  width: 180rpx;
  height: 216rpx;
}
.goods .tips{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}
.goods .tips image{
  width: 76rpx;
}
.goods .tips view{
  position: absolute;
  left: 35rpx;
  top: 30rpx;
  text-align: center;
  transform: translate(-50%,-50%);
  width: 100%;
  height: 100%;
}
.goods .info{
  width: calc(100% - 210rpx);
  margin-left: 30rpx;
}
.goods .info .title{
  font-size: 28rpx;
  color: #231F20;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods .info .desc{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #A7A5A6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods .norms{
  width: 100%;
  color: #A7A5A6;
  font-size: 24rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break:break-all;
}
.goods .norms text{
  margin-right: 10rpx;
}
.goods .price{
  vertical-align: text-bottom;
  position: absolute;
  left: 240rpx;
  bottom: 30rpx;
  width: calc(100% - 270rpx);
}
.goods .pay_price{
  display: inline-block;
  margin-right: 16rpx;
  color: #231F20;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
}
.goods .pay_price text{
  font-size: 24rpx;
}
.goods .market_price{
  font-size: 22rpx;
  color: #D3D2D2;
  margin-left: 14rpx;
  text-decoration: line-through;
  display: inline-block;
}
.goods .paynum{
  float: right;
  font-size: 28rpx;
  color: #A7A5A6;
}