/* list */
.page{
  margin-top: 100rpx; 
}
.list{
  width: 100%;
  margin-top: 16rpx;
}
.list .head{
  width: calc(100% - 60rpx);
  background: #ffffff;
  color: #231F20;
  font-size: 28rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
}
.list .head text{
  float: right;
}
/* body */
.list .detail{
  padding: 30rpx;
}
.list .body{
  width: 100%;
  background: #F9F9F9;
  padding-bottom:30rpx;
  display: flex;
  position: relative;
}
.list .body:last-child{
  padding-bottom: 0;
}
.list .body image{
  width: 180rpx;
  height: 216rpx;
}
.list .body .tips{
  position: absolute;
  left: 0;
  top: 0;
  font-size: 24rpx;
  color: #FFFFFF;
}
.list .body .tips image{
  width: 76rpx;
}
.list .body .tips view{
  position: absolute;
  left: 35rpx;
  top: 30rpx;
  text-align: center;
  transform: translate(-50%,-50%);
  width: 100%;
  height: 100%;
}
.list .body .info{
  position: relative;
  width: calc(100% - 200rpx);
  margin-left: 20rpx;
}
.list .body .title{
  color: #231F20;
  font-size: 28rpx;
}
.list .body .desc{
  color: #A7A5A6;
  font-size: 26rpx;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.list .body .norms{
  color: #A7A5A6;
  font-size: 24rpx;
}
.list .body .price{
  position: absolute;
  width: 100%;
  left: 0rpx;
  bottom: 0rpx;
  font-size: 26rpx;
  color: #231F20;
  font-weight: bold;
}
.list .body .price .symbol{
  font-size: 24rpx;
}
.list .body .price .num{
  font-size: 26rpx;
  color: #A7A5A6;
  float: right;
  font-weight: 100;
}
/* footer */
.list .footer{
  width: calc(100% - 60rpx);
  background: #ffffff;
  color: #231F20;
  font-size: 28rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
}
.list .footer .show{
  display: inline-block;
  width: auto;
}
.list .footer text{
  color: #A7A5A6;
  font-size: 22rpx;
  margin-left: 10rpx;
}
.list .footer .btn{
  float: right;
  display: inline-flex;
}
.list .footer .btn button,
.list .footer .btn view{
  width: 140rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  border: 1rpx solid #231F20;
  margin: 20rpx 0 20rpx 20rpx;
  padding: 0;
}

.list .footer .white_btn{
  color: #231F20;
  background: #ffffff;
}
.list .footer .black_btn{
  background: #231F20;
  color: #ffffff;
}