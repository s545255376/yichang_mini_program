/* 商品详情 */
.goods{
  width: calc(100% - 60rpx);
  display: flex;
  padding: 30rpx;
  position: relative;
}
.goods .goods_thumb{
  width: 180rpx;
  height: 216rpx;
}
.goods .tips{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}
.goods .tips image{
  width: 76rpx;
}
.goods .tips view{
  position: absolute;
  left: 35rpx;
  top: 30rpx;
  text-align: center;
  transform: translate(-50%,-50%);
  width: 100%;
  height: 100%;
}
.goods .info{
  width: calc(100% - 210rpx);
  margin-left: 30rpx;
}
.goods .info .title{
  font-size: 28rpx;
  color: #231F20;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods .info .desc{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #A7A5A6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goods .norms{
  width: 100%;
  color: #A7A5A6;
  font-size: 24rpx;
  margin-top: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break:break-all;
}
.goods .norms text{
  margin-right: 10rpx;
}
.goods .price{
  vertical-align: text-bottom;
  position: absolute;
  left: 240rpx;
  bottom: 30rpx;
  width: calc(100% - 270rpx);
}
.goods .pay_price{
  display: inline-block;
  margin-right: 16rpx;
  color: #231F20;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
}
.goods .pay_price text{
  font-size: 24rpx;
}
.goods .market_price{
  font-size: 22rpx;
  color: #D3D2D2;
  margin-left: 14rpx;
  text-decoration: line-through;
  display: inline-block;
}
.goods .paynum{
  float: right;
  font-size: 28rpx;
  color: #A7A5A6;
}
/* 退货原因 */
.form{
  width: calc(100% - 60rpx);
  padding: 0 30rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
}
.form .list{
  border-bottom: 1px solid #EAEBEE;
  width: 100%;
  display: flex;
  padding: 30rpx 0;
}
.form .list:last-child{
  border-bottom: none;
}
.form .list .name{
  font-size: 30rpx;
  color: #231F20;
  line-height: 30rpx;
  width: 140rpx;
}
.form .list .info{
  text-align: right;
  font-size: 28rpx;
  width: calc(100% - 140rpx);
}
.form .list .info image{
  width: 30rpx;
  vertical-align: middle;
}
.form .list .info text{
  font-size: 20rpx;
}
.form .list .unclick{
  color: #D3D2D2;
}
/* part2 */
.part2,.part3{
  margin-bottom: 0;
}
.part2 .list{
  display: block;
}
.part2 .list textarea{
  background: #F9F9F9;
  margin-top: 30rpx;
  padding: 30rpx;
  height: 140rpx;
  font-size: 28rpx;
}
.part2 .list .upload{
  width: 100%;
  display: block;
}
.part2 .list .upload_btn{
  width: 138rpx;
  height: 138rpx;
  line-height: 138rpx;
  color: #D3D2D2;
  border: 1rpx solid #D3D2D2;
  text-align: center;
  display: inline-block;
  margin-top: 30rpx;
  vertical-align: top;
  font-size: 60rpx;
}
.part2 .upload .img{
  width: 140rpx;
  height: 140rpx;
  margin-top: 30rpx;
  display: inline-block;
  margin-right: 30rpx;
  position: relative;
}
.part2 .upload image{
  width: 100%;
  height: 100%;
}
.part2 .upload .img view{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  line-height: 50rpx;
  background: #000000;
  color: #ffffff;
  text-align: center;
  font-size: 20rpx;
  opacity: 0.8;
}
.logistics{
  font-size: 26rpx;
  color: #A7A5A6;
  padding: 20rpx 30rpx;
}
/* part3 */
.part3 .list .name{
  width: 240rpx;
}
.part3 .list .info{
  width: calc(100% - 240rpx);
}

.submit{
  width: 100%;
  background: #ffffff;
  padding: 30rpx 0;
  margin-top: 20rpx;
}
.submit view{
  width: calc(100% - 60rpx);
  margin: 30rpx;
  color: #ffffff;
  background: #231F20;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}
/* 弹窗 */
.toast_body label{
  width: 100%;
  display: flex;
  border-bottom: 1px solid #EAEBEE;
  position: relative;
}
.toast_body label:last-child{
  border-bottom: none;
}
.toast_body label .info{
  width: calc(100% - 40rpx);
  font-size: 30rpx;
  color: #231F20;
  line-height: 30rpx;
  padding: 30rpx 0;
}
.toast_body label .radio{
  width: 40rpx;
  text-align: right;
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -30rpx;
}
.toast_type .title{
  line-height: 40rpx;
}
.toast_type .desc{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #A7A5A6;
  margin-top: 16rpx;
}
radio .wx-radio-input{
  border-color: #D3D2D2;
}
radio .wx-radio-input.wx-radio-input-checked{
  background: #F1AFAD;
}
radio .wx-radio-input.wx-radio-input-checked::before{
  color: #ffffff;
}
/* 奖品 */
.order_title{
  width: calc(100% - 60rpx);
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #231F20;
  line-height: 40rpx;
  background: #ffffff;
}
.order_title image{
  width: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.gifts{
  width: calc(100% - 60rpx);
  padding: 30rpx;
  display: flex;
}
.gifts .gift_img{
  width: calc(100% - 55rpx);
  display: inline-flex;
}
.gifts .gift_img image{
  width: calc(33.33% - 30rpx);
  margin-right: 30rpx;
  display: inline-block;
  padding: 50rpx 0;
}
.gifts .show_more{
  width: 55rpx;
  color: #A7A5A6;
  background: #ffffff;
  font-size: 24rpx;
  line-height: 38rpx;
  padding: 0 16rpx;
  text-align: center;
  position: relative;
}
.gifts .show_more .info{
  vertical-align: middle;
  width: 100%;
  height: 144rpx;
  position: absolute;
  left: 0;
  top: calc(50% - 72rpx);
}