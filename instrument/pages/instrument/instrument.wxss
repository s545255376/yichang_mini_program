page{
  /* background: #000; */
  background: #ffffff;
}
.top{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 73.3%;
}

.machine_bg{
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}

.head{
  color: #231F20;
  padding: 60rpx 40rpx 12rpx;
  font-size: 46rpx;
  line-height: 46rpx;
  font-weight: bold;
}
.tips{
  color: #A7A5A6;
  padding: 0 40rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-bottom: 70rpx;
}
.tips text{
  color: #D8C391;
}
/* ------------------------------------------------------------- */
.roundpart{
  width: 100%;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -159rpx;
}
.roundpart .round{
  position: absolute;
  margin: auto;
}
.round_opacity{
  top: 77rpx;
  left: calc(50% - 107rpx);
  width: 214rpx;
  animation: anti_clockwise 3s infinite linear;
}
.round_inside{
  top: 77rpx;
  left: calc(50% - 107rpx);
  width: 214rpx;
}
.round_one{
  top: 36rpx;
  left: calc(50% - 148rpx);
  width: 296rpx;
  animation: clockwise 3s infinite linear;
}
.round_two{
  top: 25rpx;
  left: calc(50% - 159rpx);
  width: 318rpx;
  animation: anti_clockwise 3.5s infinite linear;
}
.round_three{
  top: 0;
  left: calc(50% - 184rpx);
  width: 368rpx;
  animation: clockwise 4s infinite linear;
}
@keyframes clockwise {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(-360deg);
  }
}
@keyframes anti_clockwise {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.success{
  position: absolute;
  left: 0;
  top: calc(50% + 240rpx);
  width: 100%;
  text-align: center;
  color: #D8C391;
  font-size: 28rpx;
  line-height: 26rpx;
}
.success image{
  width: 28rpx;
  margin-right: 15rpx;
  vertical-align: middle;
}
.expand_round .roundpart{
  transform: scale(1.1);
  margin-top: -174.9rpx;
}
.expand_round .success{
  top: calc(50% + 264rpx);
}
